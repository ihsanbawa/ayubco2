{{! Partial: Post Header }}

<section class="post-header">
    {{#is "post"}}
        {{#primary_tag}}
            <div class="post-header-category"><a href="{{url}}">{{name}}</a></div>
        {{/primary_tag}}
    {{/is}}
    <h1 class="post-header-title">{{title}}</h1>
    {{#is "post"}}
        <div class="post-meta">
            <span class="post-meta-intro">{{t "Posted"}}</span>
            {{#primary_author}}
                <span class="post-meta-author">{{t "by"}}
                    <a href="{{url}}">
                        {{#if profile_image}}
                            <picture class="post-meta-avatar">
                                <img class="post-meta-avatar-image" src="{{img_url profile_image size="xxs"}}" alt="{{name}}" loading="lazy" />
                            </picture>
                        {{/if}}
                        {{name}}
                    </a>
                </span>
            {{/primary_author}}
            <span class="post-meta-published">{{t "on"}} <a href="{{url}}"><time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format="MMMM Do, YYYY"}}</time></a></span>
        </div>
    {{/is}}
</section>
