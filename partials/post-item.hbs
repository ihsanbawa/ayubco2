{{! Partial: Post List }}

<article class="post-item">
    <div class="post-item-upper">
        {{#if primary_tag}}
            <div class="post-item-category">
                {{#primary_tag}}
                    <a href="{{url}}">{{name}}</a>
                {{/primary_tag}}
            </div>
        {{/if}}
        {{#if @site.members_enabled}}
            <div class="post-item-premium post-item-premium--{{visibility}}">
                <span>{{t "Premium"}}</span>
                <svg class="svg-icon svg-icon-stroke svg-icon-bookmark">
                    <use xlink:href="{{asset "svg/icons.svg"}}#bookmark"></use>
                </svg>
            </div>
        {{/if}}
    </div>
    <h2 class="post-item-title">
        <a href="{{url}}">{{title}}</a>
    </h2>
    <div class="post-meta">
        <span class="post-meta-intro">{{t "Posted"}}</span>
        {{#primary_author}}
            <span class="post-meta-author">{{t "by"}}
                <a href="{{url}}">
                    {{#if profile_image}}
                        <picture class="post-meta-avatar">
                            <img class="post-meta-avatar-image" src="{{img_url profile_image size="xxs"}}" alt="{{name}}" loading="lazy" />
                        </picture>
                    {{/if}}
                    {{name}}
                </a>
            </span>
        {{/primary_author}}
        <span class="post-meta-published">{{t "on"}} <a href="{{url}}"><time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format="MMMM Do, YYYY"}}</time></a></span>
    </div>
    <p class="post-item-excerpt">
        {{#if custom_excerpt}}
            {{excerpt}}
        {{else}}
            {{excerpt words="45"}}...
        {{/if}}
    </p>
</article>
